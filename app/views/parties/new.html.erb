<p><%= button_to "Discover Movies", discover_index_path, method: :get %></p>

<h1><%= @movie.title %></h1>

<p><%= form_with url: movie_parties_path(@movie.id), method: :post, local: true do |f|  %></p>
     <%= f.hidden_field :movie_id, value: @movie.id %>
     <%= f.hidden_field :host_id, value: current_user.id %>

  <p><%= f.label :duration %>
     <%= f.number_field :duration, min: @movie.runtime %></p>

  <p><%= f.label :date %></p>
  <p><%= f.date_select :date %></p>

  <p><%= f.label :time %></p>
  <p><%= f.time_select :time, :ignore_date => true, :ampm => true %></p>


  <% @users.each do |user| %>
  <div id="user-<%=user.id%>">
      <% if user.id != current_user %>
      <p><%= f.label "#{user.name}" %>
      <%= f.check_box "#{user.name}" %></p>
    <% end %>
  </div>

  <% end %>

  <p><%= f.submit "Create Party" %></p>
<% end %>
